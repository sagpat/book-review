{
  "name": "book-review-microservice",
  "version": "1.0.0",
  "description": "Backend microservice for book review application providing recommendations, analytics, and notifications",
  "main": "dist/server.js",
  "scripts": {
    "build": "npm run clean && npm run type-check && tsc",
    "build:prod": "NODE_ENV=production npm run build",
    "start": "node -r tsconfig-paths/register dist/server.js",
    "start:prod": "NODE_ENV=production node -r tsconfig-paths/register dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only --env-file=.env -r tsconfig-paths/register src/server.ts",
    "dev:debug": "ts-node-dev --inspect --respawn --transpile-only -r tsconfig-paths/register src/server.ts",
    "clean": "rm -rf dist logs/*.log",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "logs:clear": "rm -rf logs/*.log",
    "health": "curl -f http://localhost:3002/api/health || exit 1"
  },
  "keywords": [
    "book-review",
    "microservice",
    "recommendations",
    "analytics",
    "nodejs",
    "typescript"
  ],
  "author": "Book Review Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "redis": "^4.6.10",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "tsconfig-paths": "^4.2.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.9.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
